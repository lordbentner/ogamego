{{template "header" .}}
<div class="card h-100 d-flex flex-column align-items-center rapport">
    <div class="card-header text-center text-white"><h4>Nombre et infos des attaques re√ßues: {{ len .spy}}</h4></div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {{range .nbPages}}
                <li class="page-item {{if eq $.Page .}}active{{end}}"><a class="page-link" href="/rapports?page={{.}}">
                {{.}}</a></li>
            {{end}}
        </ul>
    </nav>
    <div class="card-body">
        <table class="table table-ordered table-dark text-center">
        <thead>
            <tr>{{if gt (len .spy) 0}}
                    {{range $key, $val := index .spy 0}}
                        <th scope="row">{{$key}}</th>
                    {{end}}
                {{end}}
            </tr>
        </thead>
        <tbody>
            {{range $ind,$v := .spy}}
                {{if and (lt $ind (mul $.Page 5)) (ge $ind (mul (sub $.Page 1) 5))}}
                <tr>{{range $key,$val := $v }}
                    <td>
                         {{if eq (printf "%T" $val) "map[string]interface {}"}}
                            {{range $cle, $value := $val}}
                                 {{if ne $value 0}}
                                    <p>{{$cle}}: {{$value}}</p>
                                {{end}}
                            {{end}}
                           
                        {{else}}
                            <p> {{.}}</p>
                        {{end}}
                    </td>
                    {{end}}
                </tr>
                {{end}}
            {{end}}
        </tbody>
        </table>
    </div>
</div>
</body>
</html>