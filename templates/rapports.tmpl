<h2>Nombre et infos des rapport: {{ len .spy}}</h2>
<table class="table table-ordered table-dark">
    <thead>
        <tr>{{if gt (len .spy) 1}}
                {{range $k, $v := index .spy 1}}
                    {{if $v}}
                        <th scope="row">{{$k}}</th>
                    {{end}}
                {{end}}
            {{end}}
        </tr>
    </thead>
    <tbody>
        {{range .spy}}
            <tr>
                {{range $k,$v := .}}
                    {{if eq (printf "%T" $v) "map[string]interface {}"}}
                        <td>{{range $key,$val := $v}}
                                <p>{{$key}}: {{$val}}</p>
                            {{end}}
                        </td>
                    {{else if $v}}
                        <td>{{$v}}</td>
                    {{end}}
                {{end}}
            </tr>
        {{end}}
    </tbody>
</body>
</html>